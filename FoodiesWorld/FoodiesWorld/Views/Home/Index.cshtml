@using Microsoft.AspNetCore.Identity


@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<section class="h-100 d-flex flex-column">
    <section class="row flex-grow-1 text-center bg-info" style="min-height:45%;"> <!-- main view section-->
        <div class="col align-content-center container">
            <h1 class="">Welcome in foodie's World</h1>
            <h3 class="text-muted">Let your foodie journey begin</h3>
            <div class="mt-3 gap-5 d-flex justify-content-center">
                <a class="btn btn-light" asp-controller="Home" asp-action="Privacy"> Search </a>
                @if (!SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Login"> Sign in </a>
                }
            </div>
        </div> 
    </section>
    <section class="row d-flex flex-row flex-grow-0 w-75 m-auto mt-2">
        <!--about website section-->
        <div class="col">
            <h2>
                About
            </h2>
            <p>
                Hi!</br>
                Welcome to my simple web application! Here, you can search for new restaurants, check their ratings, and schedule a visit if something catches your eye. Don’t forget to share your opinion when you come back — your feedback helps others too!
               </br> Website created as part of a recruitment process at Esatto!
            </p>
        </div>
        <div class="col d-felx justify-content-center text-center" >
            <!--Image section-->
            <img src="~/images/Home_view_image.jpg" alt="here will be an img soon"style="height:10em" />
        </div>
    </section>
</section>

