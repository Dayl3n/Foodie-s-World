<style>
    .low-res-colpreview {
        display: flex;
        flex-direction: row;
    }

    .orang {
        background-color: #FACF55;
        border-radius: 10px;
    }
    }
</style>
<script src="~/js/calendarWeather.js"></script>

<div class="w-75 m-auto">
    <div>
        <select id="SelectRestaurant" name="RestaurantChoice" asp-items="ViewBag.RestaurantCities"></select>
    </div>


    <div id="weatherWidgetContainer" class="d-flex gap-2 text-center align-items-center justify-content-center low-res-colpreview">

    </div>

<div class="w-auto" id="calendar"></div>

</div>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.17/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.querySelector('#calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            contentHeight: 'auto',
 
            initialView: 'dayGridMonth',
            events: '/home/GetEvents'
        });

        calendar.render();
    });
</script>
