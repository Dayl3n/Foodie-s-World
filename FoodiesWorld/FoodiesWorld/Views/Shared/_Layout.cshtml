@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodiesWorld</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodiesWorld.styles.css" asp-append-version="true" />
    <style>
        *{
        padding:0;
        margin:0;
        }

        html, body {
        margin: 0;
        height: 100%;
        overflow-x: hidden
        }
    </style>
</head>
<body class="h-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FoodiesWorld</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="hstack gap-2 navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <div class="vr mt-2" style="font-size:3em; width:2px"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Restaurants" asp-action="ShowTopRestaurants">Top Restaurants</a>
                        </li>
                        <li>
                            <div class="vr mt-2" style="font-size:3em; width:2px"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Restaurants" asp-action="Search">Search</a>
                        </li>
                        <li>
                            <div class="vr mt-2" style="font-size:3em; width:2px"></div>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {               
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Visits" asp-action="Calendar">My Calendar</a>
                            </li>
                            <li>
                                <div class="vr mt-2" style="font-size:3em; width:2px"></div>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {                     
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Opinions" asp-action="AllRevies">All Revies</a>
                                </li>
                                <li>
                                    <div class="vr mt-2" style="font-size:3em; width:2px"></div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Restaurants" asp-action="Index">All Restaurants</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Opinions" asp-action="ShowOpinions">My Revies</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="h-75" style="width:100%; padding:0; margin:0;">
        <main role="main" class="h-100 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top h-10 footer text-muted">
        <div class="container">
            &copy; 2025 - FoodiesWorld - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
